@model RegisterUserViewModel
<div>
    <div class="page-header">
        <h1>User Registration</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">User Registration</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email"
                                       asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control"
                                       placeholder="Password"
                                       asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="GivenName"></label>
                                <input class="form-control" placeholder="Given name"
                                       asp-for="GivenName">
                            </div>
                            <div class="form-group">
                                <label asp-for="FamilyName"></label>
                                <input class="form-control" placeholder="Family name"
                                       asp-for="FamilyName">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input class="form-control" placeholder="Address"
                                       asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label asp-for="ProvinceId"></label>
                                <select class="form-control" asp-for="ProvinceId" asp-items="@Model.Provinces">
                                    <option value="">Select</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Age"></label>
                                <input class="form-control" placeholder="Address"
                                       asp-for="Age">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Register</button>

                            </div>
                            <div class="form-group">
                                <a asp-action="LogIn"
                                   asp-controller="Account"
                                   asp-route-returnUrl="@Model.ReturnUrl">
                                    Login
                                </a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>