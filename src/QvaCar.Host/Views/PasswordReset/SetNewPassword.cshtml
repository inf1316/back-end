@model SetNewPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

<div class="set-new-password-page">
    <div class="lead">
        <h1>Reset yout Password</h1>
        <p>Choose your new Password</p>
    </div>
    <partial name="_ValidationSummary" />
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>Account Password</h2>
                </div>
                <div class="card-body">
                    <form asp-action="SetNewPassword" method="post">
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" >
                        </div>

                        <div>
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />
                        </div>
                        <input type="submit" class="btn btn-primary" value="Change" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>